<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.customview.CommonTitleBar
        android:id="@+id/title_layout"
        style="@style/head_default"
        app:leftBtnTxt="Cancel"
        app:rightBtnTxt="Save"
        app:titleTxt="Enter the content" />

    <View style="@style/message_divider" />

    <EditText
        android:id="@+id/text_input"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_margin="2dp"
        android:background="@drawable/corners_bg_white_2r_borderd"
        android:gravity="top"
        android:hint="Enter the content..."
        android:padding="4dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tag_input_tips"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_weight="1"
        android:text="You can also enter 10 words(0/10)" />

    <RelativeLayout
        android:id="@+id/ll_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include layout="@layout/layout_ad_container" />

    </RelativeLayout>

</LinearLayout>